

<h1>Listing Plugs</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plugs.each do |plug| %>
      <tr>
        <td><%= image_tag @plug.image.url(:medium) %></td>
        <td><%= plug.description %></td>
        <td><%= plug.user.email if plug.user %></td>
        <td><%= link_to 'Show', plug %></td>
        <% if plug.user == current_user %>
        <td><%= link_to 'Edit', edit_plug_path(plug) %></td>
        <td><%= link_to 'Destroy', plug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Plug', new_plug_path %>
<% end %>